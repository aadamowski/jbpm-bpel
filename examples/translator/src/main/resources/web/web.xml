<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee">

  <servlet>
    <servlet-name>textTranslatorServlet</servlet-name>
    <!-- service implementation bean class -->
    <servlet-class>com.example.translator.TextTranslator_Impl</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>documentTranslatorServlet</servlet-name>
    <!-- service implementation bean class -->
    <servlet-class>com.example.translator.DocumentTranslator_Impl</servlet-class>
  </servlet>

  <servlet-mapping>
    <!-- the servlet above -->
    <servlet-name>textTranslatorServlet</servlet-name>
    <url-pattern>/text</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <!-- the servlet above -->
    <servlet-name>documentTranslatorServlet</servlet-name>
    <url-pattern>/document</url-pattern>
  </servlet-mapping>

</web-app>