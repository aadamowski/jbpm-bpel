<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="field" auto-import="false">

  <class name="org.jbpm.bpel.variable.exe.MessageValue" table="BPEL_MESSAGEVALUE">

    <id name="id" column="ID_">
      <generator class="native" />
    </id>

    <many-to-one name="type" column="TYPE_" foreign-key="FK_MSGVALUE_MSGTYPE" />

    <map name="parts" table="BPEL_MESSAGEVALUE_PART" cascade="all">
      <key column="MSGVALUE_" foreign-key="FK_PART_MSGVALUE" />
      <map-key column="NAME_" type="string" />
      <element column="VALUE_" type="element" length="4000" />
    </map>

  </class>

</hibernate-mapping>